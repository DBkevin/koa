<div class="offset-md-2 col-md-8">
    <div class="card ">
        <div class="card-header">
            <h5><%= title %></h5>
        </div>
        <div class="card-body">
            <form method="POST" action="/signup">
                <div class="form-group">
                    <label for="name">名称：</label>

                    <input id="name" type="text" class="form-control <%= locals.errors_name?'is-invalid':'' %> "
                        name="name" value="" required autofocus>
                    <% if(locals.errors_name){ %>
                        <span class="invalid-feedback" role="alert">
                            <strong>
                                <%=errors_name%>
                            </strong>
                        </span>
                        <% } %>
                </div>
                <div class="form-group">
                    <label for="password">邮箱：</label>
                    <input id="email" type="email" class="form-control <%= locals.errors_email?'is-invalid':'' %> "
                        name="email" value="" required>
                    <% if(locals.errors_email){ %>
                        <span class="invalid-feedback" role="alert">
                            <strong>
                                <%=errors_email%>
                            </strong>
                        </span>
                        <% } %>

                </div>
                <div class="form-group">
                    <label for="password">密码：</label>

                    <input id="password" type="password"
                        class="form-control <%= locals.errors_password ?'is-invalid':'' %> " name="password" required>
                    <% if(locals.errors_password){ %>
                        <span class="invalid-feedback" role="alert">
                            <strong>
                                <%=errors_password %>
                            </strong>
                        </span>
                        <% } %>

                </div>
                <div class="form-group">
                    <label for="password_confirmation">确认密码：</label>
                    <input type="password" name="password_confirmation" class="form-control" value="">
                </div>

                <button type="submit" class="btn btn-primary">注册</button>
            </form>
        </div>
    </div>
</div>